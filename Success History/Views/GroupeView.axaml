<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:Success_History.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Success_History.Views.GroupeView">

    <StackPanel Spacing="5" Width="200" Background="Blue">
	    <TextBlock Text="{Binding Nom}"/>
		<TextBlock Text="{Binding Points}"/>

		<ListBox Items="{Binding Groupes}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<local:GroupeView/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<ListBox Items="{Binding Notes}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<local:NoteView/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		
    </StackPanel>

</UserControl>
