<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Success_History.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Success_History.Views.FenetrePrincipale"
        Icon="/Assets/avalonia-logo.ico"
        Title="Success History">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<StackPanel Margin="30" Height="NaN" VerticalAlignment="Center">
        
		<TextBlock Text="Hello Avalonia" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<DockPanel Margin="30">
			<Button Margin="50 0" DockPanel.Dock="Left" HorizontalAlignment="Left" Command="{Binding CommandeSerialiser}">Sérialiser JSON</Button>
			<Button Margin="50 0" DockPanel.Dock="Right" HorizontalAlignment="Right" Command="{Binding CommandeDeserialiser}">Désérialiser JSON"</Button>
		</DockPanel>
		<TextBlock Text="{Binding TexteJSON}" HorizontalAlignment="Center"/>
	</StackPanel>
	
</Window>
